<%= form_for @group do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2>
        填写的该表单有<%= @group.errors.count %>个错误
      </h2>
      <ul>
        <% @group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :groupname, "小组名" %><br>
    <%= f.text_field :groupname %>
  </p>
  <p>
    <%= f.submit "提交" %>
  </p>
<% end %>
